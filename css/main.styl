@import 'mixins.styl'

*
	bbox()

body, html
	rect 100%
	margin 0
	padding 0
	font-family monospace
	text-align center
	font-size 16px

ex = (1/16)em
gs = 8*ex
c-red = #f59995
.icon
	background-color c-red
	display inline-block
	border-radius 50%
	rect 15*gs
	position: relative
	margin-top 200px

	.svg-icon
		rect 50%
		position: absolute
		left 50%
		top 50%
		margin-left -25%
		margin-top -25%

	.text
		margin-top 4*gs
		color c-red
		border-radius 50%
		display inline-block
		padding (gs/2)
		font-size 1.5*gs

.svg-icon
	stroke white

	svg
		rect 100%

svg
	path, line, polyline
		// stroke-linejoin round
		// stroke-linecap 	round
		stroke-width: 1px

